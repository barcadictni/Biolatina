//OOCSS
alinear()
	display inline-block
	vertical-align top
rem(pixel)
	(pixel/14)rem
	
fuentePrincipal(size)
	font-family "Titillium Web"
	font-size rem(size)

fuenteTexto(size)
	font-family "Open Sans"
	font-size rem(size)
a
	text-decoration none
img
	max-width 100%
	font-size 0
ul
p
figure
	margin 0
	padding 0
ul
	list-style none
h1
	fuentePrincipal(60)
	color dark-green
	text-transform uppercase
h3
	fuentePrincipal(36)
input[type="text"]
input[type="mail"]
	border 1px solid #d0dee7
	box-sizing border-box
	height 30px
	padding-left: .7rem
	width 100%
textarea
	border 1px solid #d0dee7
	box-sizing border-box
	padding-left: .7rem
	width 100%
body
	fuenteTexto(14)
	font-weight: 300
	background-color: #f3f3f3
	line-height: 1.5
icon(icono)
	content "\"+icono
	font-family fontawesome
	padding-right .7rem
	
parallax(imagen)
	background-attachment fixed
	background-image url(../img/imagen)
	background-position top center
	background-repeat no-repeat
	background-size cover
	//height 70vh
	position relative
	//text-indent -9999px
/* FUENTES 

    OPEN SANS REGULAR = OpenSans400
    PRISTINA = pristina
    GOTHAM EXTRA LIGHT = GothamXL
    GOTHAM BOOK = GothamBK
    GOTHAM BOLD = GothamB
    GOTHAM LIGHT = GothamL
    GOTHAM MEDIUM = GothamM
    GOTHAM LIGHT ITALIC = GothamLIta

*/
.alinear
	alinear()
.verMas
	display block
	padding .3rem 1.5rem
	border-radius 7px
	border 2px solid light-green
	text-transform uppercase
	color light-green
	margin 2rem auto 0 auto
	max-width rem(170)
	width 100%
	text-align: center
	fuentePrincipal(36)
	&:hover
		background-color light-green
		color white
		border 1px solid dark-green
.box
	max-width rem(186)
	width 100%
	border 1px solid dark-green
	margin 2rem auto
	height rem(207)
	position relative
	.title
		height rem(42)
		color white
		background-color: dark-green
		text-transform: capitalize
		font-size: rem(18)
		text-align: center
		padding-top: .7rem
		box-sizing: border-box
		line-height 1
		&.twoLines
			padding-top: .2rem
	figure
		text-align: center
		padding 1rem 0
	.view
		width 0
		height 0
		border-bottom: rem(50) solid dark-green
		border-left: rem(50) solid transparent
		color white
		position absolute
		right 0
		bottom 0
	.arrow
		position absolute
		bottom 2px
		right -4px
		color white
		z-index 2
		&:before
			icon("f061")
			font-size 1.5rem
	&:hover
		border 1px solid light-green
		.title
			background-color: light-green
		.view
			border-bottom: rem(50) solid light-green
.preHeader
	> div
		width 50%
		padding .2rem
		box-sizing border-box
		span
			visibility hidden
		&:first-child
			background-color dark-green
		&:last-child
			background-color light-green

// HEADER INICIO
header
	padding 1rem
	figure
		text-align center
		padding 1rem 0
	.social
		text-align: center
		li
			alinear()
			padding 1rem
			a
				font-size 3rem
			&:first-child
				a
					display block
					&:before
						icon("f230")
						color #3A5795
			&:last-child
				a
					display block
					&:before
						icon("f081")
						color #55ACEE
	nav
		text-align right
		position relative
		button
			background-color transparent
			border 1px solid light-green
			border-radius 5px
			&:before
				icon("f0c9")
				color dark-green
				padding .4rem
				display inline-block
				font-size 2rem
		ul
			padding 1rem
			display none
			left 0
			position absolute
			background-color: dark-gray
			right 0
			li
				border-bottom: 1px dotted light-green
				margin .5rem auto
				padding .5rem 0
				text-align: left
				a
					display block
					text-transform uppercase
					fuentePrincipal(20)
					color dark-green
					&:after
						icon("f061")
						padding-left: 1rem
				
// HEADER FIN
// CONTENIDO WELCOME INICIO
section
	padding 3rem 1rem
	box-sizing border-box
	h1
		font-weight: 200
		text-align: center
	p
		font-size: rem(16)
// CONTENIDO WELCOME FIN
// HOME HEADLINE INICIO
.headline
	h2
		fuentePrincipal(40)
		font-weight: 200
		text-align: right
		padding-right: .5rem
		margin .5rem 0
		color white
		text-transform: uppercase
	> div
		width 50%
		padding .2rem
		box-sizing border-box
		height 100%
		span
			visibility hidden
		&:first-child
			background-color dark-green
		&:last-child
			background-color light-green
			h2
				visibility hidden
	
		
// HOME HEADLINE FIN
// SERVICIOS INICIO
.servicios
	h3
		fuentePrincipal(36)
		color dark-green
		font-weight: 200
// SERVICIOS FIN
// CURSOS Y ASESORIA INICIO
.cursosAsesoria
	padding-left 0
	padding-right: 0
	h4
		fuentePrincipal(36)
		font-weight: 600
		text-transform: capitalize
		padding-left 1rem
		padding-right: 1rem
		margin .3rem
	.cursos
		background-color: light-green
		color white
		padding-top 2rem
		padding-bottom 2rem
		ul
			padding 1rem
		li
			position relative
			margin-bottom: 1.5rem
			a
				color white
				fuenteTexto(18)
				vertical-align: middle
				display inline-block
				max-width 78%
				margin-left: .4rem
				//display block
			&:before
				display inline-block
				font-size 5rem
				vertical-align: middle
				max-width 20%
			&:nth-child(4)
				&:before
					font-size 3rem
			&:last-child
				&:before
					font-size 4rem
			&:hover
				color dark-green
				a
					color dark-green
	.asesoria
		background-color: light-gray
		color light-green
		padding-top 2rem
		padding-bottom 2rem
		ul
			padding 1rem
			li
				a
					fuentePrincipal(36)
					font-weight: 200
					color light-green
					display inline-block
				&:first-child
					margin-bottom: 4rem
				&:after
					vertical-align middle
					content "\e610"
					color light-green
					font-size 8rem
					font-family: "icomoon"
					display inline-block
.testimonios
	background-color: dark-gray
	color white
	text-align: center
	span
		font-size: 12rem
	.autor
		margin-top: 2rem
		font-weight 400
.headline2
	background-color: dark-green
	text-align: center
	h2
		text-transform: uppercase
		color white
		fuentePrincipal(35)
		font-weight: 200
		margin 0
		&:after
			icon('f01b')
			font-size: 2rem
			margin-left: 1rem

.box2
	color gray-text
	padding 1.5rem 2rem
	h4
		fuentePrincipal(24)
		margin-top 0
	strong
	.mapa
		color light-green
		font-weight: 600
	.mapa
		&:before
			icon('f041')
.contactanos
	background-color: light-green

.formulario
	input
		padding 1rem
		height rem(60)
		margin-bottom: 1rem
		&[type="submit"]
			background-color: light-green
			color white
			max-width rem(220)
			text-transform: uppercase
			padding 1rem
			display block
			border 0
			border-radius 7px
			fuentePrincipal(27)
			font-weight: 200
			width 100%
			margin-left: auto
			margin-right: auto
			box-sizing: border-box
	textarea
		padding 1rem
		margin-bottom: 1rem
footer
	background-color: dark-green
	text-align: center
	padding 1.5rem 0
	color white
	a
		color white
// CURSOS Y ASESORIA FIN

@media screen and (min-width:768px)
	.servicios
		&.medium
			div
				&[class*='row']
					text-align: center
			.box
				alinear()
				margin-right .2rem
				&:last-of-type
					margin-right: 0
	.cursosAsesoria
		&.medium
			h4
				text-align: center
	div
		&[class*="headline"]
			h2
				font-size: rem(60)
				&:after
					font-size: 4rem

@media screen and (min-width:1000px)
	.wrap
		max-width rem(960)
		margin-left: auto
		margin-right: auto
		clearfix()
	header
		&.large
			figure
			.social
				alinear()
			.social
				float right
			nav
				text-align: center
				button
					display none
				ul
					display block
					background-color: transparent
					position relative
					padding 0
					li
						alinear()
						border-bottom: 0
						padding 0
						a
							padding .7rem 1.8rem
							border 2px solid transparent
							&:after
								display none
							&:hover
								border 2px solid light-green
								border-radius 5px
	.welcome
		&.large
			p
				padding-left 9.6rem
				padding-right: 9.6rem
				font-size: 1rem
				text-align: justify
	.servicios
		&.large
			h3
				text-align: center
			.row1
			.row2
			.row3
			.row4
			.row5
				.box
					margin-right: 4rem
					&:last-of-type
						margin-right: 0
			.alineadoEspecial
				> div
					alinear()
					&.caja1
						width 50%
					&.caja2
						width 25%
						.relativo
							//margin-top: -1rem
							line-height: 1
						.row4
							.box
								margin-top: rem(10)
					&.caja3
						width 25%
	.cursosAsesoria
		&.large
			padding 0
			height rem(795)
			article
				width 50%
				alinear()
				clearfix()
				height 100%
				box-sizing border-box
				> .container
					max-width 34rem
					h4
						text-align: left
				&.cursos
					.container
						float right
				&.asesoria
					.container
						float left
						padding-left 3rem
						max-width 29rem
						ul
							padding-top: 5rem
							li
								position relative
								&:after
									right -5rem
									position absolute
									font-size: 6rem
								&:first-child
									&:after
										top 0
								&:last-child
									&:after
										top 20%
	.testimonios
		&.large
			p
				max-width rem(604)
				margin-left: auto
				margin-right: auto
				padding 0 2rem
				box-sizing border-box
	.ubicaciones
		&.large
			padding 0
			.box2
				width rem(320)
				min-height rem(420)
				alinear()
				box-sizing border-box
				border 1px solid #dbdbdb
				h4
					font-size: 1.2rem
				p
					font-size 14px
	.formulario
		&.large
			clearfix()
			.left
			.right
				max-width 48%
			.left
				float left
				margin-right: 2%
			.right
				float right
